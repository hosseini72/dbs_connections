# Include essential files
include LICENSE
include LICENCE
include README.md

# Include all Python source files in the main package
recursive-include db_connections *.py

# Exclude development and internal files (keep in GitHub, exclude from PyPI)
exclude tox.ini
exclude UPDATE_SUMMARY.md
exclude PYPI_CHECKLIST.md
exclude Makefile
exclude .gitignore

# Exclude directories not needed for end users
prune tests/
prune docs/
prune examples/
prune scripts/

# Exclude build artifacts and cache
global-exclude __pycache__/
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .Python
global-exclude build/
global-exclude develop-eggs/
global-exclude dist/
global-exclude downloads/
global-exclude eggs/
global-exclude .eggs/
global-exclude lib/
global-exclude lib64/
global-exclude parts/
global-exclude sdist/
global-exclude var/
global-exclude wheels/
global-exclude *.egg-info/
global-exclude .installed.cfg
global-exclude *.egg

# Exclude IDE and system files
global-exclude .DS_Store
global-exclude Thumbs.db
global-exclude .vscode/
global-exclude .idea/
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude version control
global-exclude .git/
global-exclude .gitignore
global-exclude .gitattributes

# Exclude testing and linting cache
global-exclude .pytest_cache/
global-exclude .mypy_cache/
global-exclude .ruff_cache/
global-exclude .tox/
global-exclude htmlcov/
global-exclude .coverage
global-exclude coverage.xml

# Exclude virtual environments
global-exclude venv/
global-exclude .venv/
global-exclude env/
global-exclude .env

